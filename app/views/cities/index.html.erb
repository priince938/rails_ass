<p id="notice"><%= notice %></p>

<h1>Cities</h1>

 
<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope='col'>Name</th>
      
      <th scope="col">Show</th>
      <% if user_signed_in? && current_user.admin %>
      <th scope="col">Edit</th>
      <th scope="col">Destroy</th>
      <% end %>
      
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td style="text-transform: capitalize;"><%= city.name %></td>
        
        <td><%= link_to 'Show', city  %></td>
        <td><%= edit_city(city) %></td>
        <% if user_signed_in? && current_user.admin %>
        <td><%= button_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-primary"%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= new_city %>

<br><br>
<%= will_paginate @city ,renderer: WillPaginate::ActionView::BootstrapLinkRenderer%>